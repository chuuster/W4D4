<% if thing == 'signup' %>
  <% header_message = "sign up for an account" %>
  <% action_url = users_url %>
  <% submit_value = "SIGN UP" %>
<% elsif thing == 'login' %>
  <% header_message = "Log in" %>
  <% action_url = session_url %>
  <% submit_value = "LOG IN" %>
<% end  %>

<h1> <%= header_message %> </h1>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Email:
  <input type="text" name="users[email]" value="">
</label> <br>

  <label>Password:
  <input type="password" name="users[password]" value="">
</label> <br>

  <input type="submit" name="" value="<%= submit_value %>">
</form>
